<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PREncryptor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/bg_color</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/bg_color</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!--  Customize your theme here.  -->
    </style>
    <style name="MyDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/bg_color</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/white</item>
        <!-- Style for positive button -->
    </style>

</resources>